extends layout

block content
      div.top

      div.container
          contain
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-3">User Page</h1>
                    <p class="lead">This is the users page.</p>
                </div>
            </div>

            //- Table for users database.
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        //<th scope="col">#</th>
                        <th scope="col">id</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    
                    //- Checking if there are users.
                    if users
                        //- Looping through users array.
                        each user, i in users
                            <tr>
                                //<th scope="row"></th>
                                td= user.id 
                                td= user.firstName
                                td= user.lastName
                            </tr>
                </tbody>
            </table>


      div.footer